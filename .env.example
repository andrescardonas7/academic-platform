# Environment variables for Academic Platform
# Copy this file to .env and fill in your actual values

# Backend
PORT=3001
NODE_ENV=development
DATABASE_URL="file:./sqlite/oferta_academica.db"
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=50000

# Authentication & Security
API_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Supabase Configuration (REQUIRED)
SUPABASE_URL=your-supabase-project-url-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_KEY=your-secure-api-key-here
NEXT_PUBLIC_APP_NAME="Academic Platform"

# AI Services
CEREBRAS_API_KEY=your-cerebras-api-key-here
