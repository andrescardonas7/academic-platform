{
  "name": "academic-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@academic/frontend",
    "dev:backend": "turbo dev --filter=@academic/backend",
    "build": "turbo build",
    "build:frontend": "turbo build --filter=@academic/frontend",
    "build:backend": "turbo build --filter=@academic/backend",
    "start": "turbo start",
    "start:frontend": "turbo start --filter=@academic/frontend",
    "start:backend": "turbo start --filter=@academic/backend",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:coverage": "turbo test -- --coverage",
    "test:watch": "turbo test -- --watch",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "setup": "pnpm install && pnpm build",
    "db:generate": "turbo db:generate --filter=@academic/database",
    "db:migrate": "turbo db:migrate --filter=@academic/database",
    "db:seed": "turbo db:seed --filter=@academic/database",
    "db:studio": "turbo db:studio --filter=@academic/database",
    "install:all": "pnpm install",
    "update:all": "pnpm update --recursive"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.0.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.0.0",
    "unlighthouse": "^0.17.1"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/engines": "5.22.0",
    "next": "^14.2.30"
  },
  "pnpm": {
    "overrides": {
      "on-headers": "^1.1.0"
    }
  }
}
