{
  "projectType": "general",
  "rules": {
    "enabled": true,
    "autoApply": true,
    "strictMode": false
  },
  "workflows": {
    "commit": {
      "enabled": true,
      "conventionalCommits": true,
      "emojiSupport": true,
      "preCommitChecks": true,
      "guidelines": {
        "preCommitChecks": ["lint", "build", "generateDocs"],
        "commitTypes": [
          "‚ú® feat",
          "üêõ fix",
          "üìù docs",
          "‚ôªÔ∏è refactor",
          "üé® style",
          "‚ö°Ô∏è perf",
          "‚úÖ test",
          "üßë‚Äçüíª chore"
        ],
        "atomicCommits": true,
        "imperativeMood": true
      }
    },
    "prReview": {
      "enabled": true,
      "multiPerspective": true,
      "autoAssignReviewers": false,
      "guidelines": {
        "roles": [
          "Product Manager",
          "Developer",
          "Quality Engineer",
          "Security Engineer",
          "DevOps",
          "UI/UX Designer"
        ],
        "keyPrinciple": "Address improvements NOW"
      }
    },
    "testing": {
      "enabled": true,
      "tdd": true,
      "coverage": true,
      "e2e": true
    },
    "documentation": {
      "enabled": true,
      "autoGenerate": true,
      "llmOptimized": true,
      "timestampFormat": "<!-- Generated: YYYY-MM-DD HH:MM:SS UTC -->"
    },
    "codeQuality": {
      "enabled": true,
      "linting": true,
      "typeChecking": true,
      "securityScan": true,
      "performanceAnalysis": true
    },
    "bugFix": {
      "enabled": true,
      "steps": [
        "Create GitHub issue",
        "Create feature branch",
        "Write failing test",
        "Implement fix",
        "Verify test passes",
        "Commit fix",
        "Create PR linking issue"
      ]
    }
  },
  "fileLimits": {
    "maxLines": 300,
    "maxFunctionLines": 50,
    "maxParameters": 5
  },
  "naming": {
    "constants": "UPPER_SNAKE_CASE",
    "functions": {
      "python": "snake_case",
      "javascript": "camelCase",
      "typescript": "camelCase"
    },
    "classes": "PascalCase",
    "files": "kebab-case"
  },
  "documentation": {
    "structure": [
      "docs/project-overview.md",
      "docs/architecture.md",
      "docs/build-system.md",
      "docs/testing.md",
      "docs/development.md",
      "docs/deployment.md",
      "docs/files.md"
    ],
    "requiredSections": [
      "Overview",
      "Usage",
      "API/Props/Parameters",
      "Component Hierarchy",
      "State Management",
      "Behavior",
      "Error Handling",
      "Performance Considerations",
      "Accessibility",
      "Testing",
      "Related Components/Features"
    ]
  },
  "testing": {
    "types": ["unit", "integration", "e2e"],
    "locations": {
      "unit": "test/unit/",
      "integration": "test/integration/",
      "e2e": "test/e2e/"
    },
    "naming": {
      "unit": "*.test.js",
      "integration": "*.spec.js",
      "e2e": "*.e2e.js"
    },
    "planRequirements": {
      "PBILevel": true,
      "TaskLevel": true,
      "simpleTasks": true,
      "complexTasks": true
    }
  },
  "security": {
    "inputValidation": true,
    "authentication": true,
    "authorization": true,
    "dataProtection": true,
    "vulnerabilityScan": true,
    "reviewChecklist": [
      "Vulnerability scanning",
      "Input validation",
      "Authentication review",
      "Sensitive data handling"
    ]
  },
  "performance": {
    "bottleneckDetection": true,
    "memoryUsage": true,
    "algorithmComplexity": true,
    "databaseOptimization": true,
    "optimizationGuidelines": [
      "Bottlenecks",
      "Memory usage",
      "Algorithm complexity",
      "Database query performance",
      "Scalability"
    ]
  },
  "accessibility": {
    "wcagCompliance": true,
    "assistiveTechnology": true,
    "keyboardNavigation": true,
    "screenReader": true,
    "wcagGuidelines": true,
    "documentAccessibilityFeatures": true
  },
  "projectSpecific": {
    "javascript": {
      "framework": "react",
      "packageManager": "npm",
      "bundler": "webpack",
      "linter": "eslint",
      "formatter": "prettier"
    },
    "python": {
      "framework": "django",
      "packageManager": "pip",
      "linter": "flake8",
      "formatter": "black",
      "typeChecker": "mypy"
    },
    "typescript": {
      "framework": "next",
      "packageManager": "npm",
      "bundler": "webpack",
      "linter": "eslint",
      "formatter": "prettier"
    }
  },
  "automation": {
    "screenshots": {
      "enabled": true,
      "platform": "macos",
      "scriptType": "applescript",
      "outputFormat": "png"
    },
    "diagrams": {
      "enabled": true,
      "type": "mermaid",
      "validation": true
    }
  },
  "statusManagement": {
    "pbiStatuses": [
      "Proposed",
      "Agreed",
      "InProgress",
      "InReview",
      "Done",
      "Rejected"
    ],
    "taskStatuses": [
      "Proposed",
      "Agreed",
      "InProgress",
      "Review",
      "Done",
      "Blocked"
    ],
    "logging": {
      "enabled": true,
      "format": "timestamp, PBI_ID, event, details, user"
    }
  },
  "versionControl": {
    "commitFormat": "<task_id> <task_description>",
    "prTitleFormat": "[<task_id>] <task_description>",
    "branchNaming": {
      "feature": "feature/<description>",
      "bugfix": "fix/<description>",
      "hotfix": "hotfix/<description>",
      "docs": "docs/<description>"
    }
  },
  "externalPackages": {
    "researchRequired": true,
    "guideFormat": "<task_id>-<package>-guide.md",
    "locations": ["tasks/", "docs/delivery/<PBI-ID>/guides/"]
  },
  "integration": {
    "ci": {
      "enabled": true,
      "platform": "github-actions",
      "checks": ["lint", "test", "build", "security"],
      "guidelines": {
        "buildSuccess": true,
        "configurationManagement": true,
        "monitoring": true,
        "rollbackCapabilities": true
      }
    },
    "cd": {
      "enabled": true,
      "autoDeploy": false,
      "environments": ["staging", "production"]
    },
    "externalSystems": {
      "documentIntegrationPoints": true,
      "handleFailuresGracefully": true,
      "monitorDependencies": true,
      "planForOutages": true
    }
  },
  "maintenance": {
    "refactoring": {
      "enabled": true,
      "frequency": "monthly",
      "technicalDebt": true
    },
    "dependencies": {
      "updateFrequency": "weekly",
      "securityAudit": true,
      "vulnerabilityScan": true
    },
    "supportDocumentation": {
      "troubleshootingGuides": true,
      "commonIssues": true,
      "clearErrorMessages": true,
      "userDocumentation": true
    }
  },
  "developmentGuidelines": {
    "taskDrivenDevelopment": true,
    "codeQualityStandards": {
      "DRY": true,
      "namedConstants": true,
      "fileLineLimit": 300,
      "cleanCode": true
    },
    "documentationRequirements": {
      "comprehensiveDocs": true,
      "updateImmediately": true,
      "LLMOptimizedFormat": true,
      "timestamps": true
    }
  }
}
