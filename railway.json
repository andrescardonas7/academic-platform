{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --prod && pnpm --filter @academic/backend build:production",
    "watchPatterns": ["apps/backend/**", "packages/shared-types/**"]
  },
  "deploy": {
    "startCommand": "cd apps/backend && pnpm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
